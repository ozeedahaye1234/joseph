	<script>
        var date = new Date();
        var date_time = date.getHours()+':'+date.getMinutes()+' , '+ date.getDate()+'.'+(date.getMonth()+1)+'.'+date.getFullYear();
        $('#time_id').html(date_time);
		$(function(){
			var socket = io.connect(window.location.origin);
			var $agenRegForm = $('#agentRegForm');
			socket.on('connect', function(){});

            $("#agentRegForm").validationEngine({promptPosition : "topLeft:300",
              onValidationComplete: function(form, status){
                if(status){
                    var data = $('#agentRegForm').serializeArray();
                    var dataOb = [];
                    item = {};
                    item["username"] = data[0].value;
                    item["full_name"] = data[1].value;
                    item["phone"] = data[2].value;
                    item["address"] = data[3].value;
                    item["email"] = data[4].value;
                    item["status"] = data[5].value;
                    item["password"] = data[0].value+'123';
                    dataOb.push(item);  
                    socket.emit('save user',dataOb);
                    socket.on('user saved', function (data) {
                        $('#alert-info').show();
                        if(data==='1')
                          {
                            $('#agentRegForm')[0].reset();
                             $('#alert-info').html(
                                  '<div class="alert alert-success">'+
                                                  'Agent added successfully'+  
                                  '</div>');
                          }else if('2'){
                                $('#alert-info').html('<div class="alert alert-danger" role="alert"> <strong>Sorry!</strong> Failed, user already exist </div>');

                          }else{
                                $('#alert-info').html('<div class="alert alert-danger" role="alert"> <strong>Sorry!</strong> Failed to add agent </div>');

                          }
                          $('#alert-info').delay(3000).hide(1000);
                          $('#alert-info').html();

                     });                
                }
              }  
            });			
    	});		

		
