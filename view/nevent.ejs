                                            <div class="col-sm-8">
                                                <div class="form-group label-floating is-empty">
                                                    <label class="control-label"></label>
                                                    <textarea class="form-control validate[required]" ng-model = "description" name="description" cols="73" rows="5"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <label class="col-sm-4 label-on-left"></label>
                                            <div class="col-sm-8">
                                                <div class="form-group label-floating is-empty">
                                                    <label class="control-label"></label>
                                                    <input type="submit" class="btn btn-primary" name="" value="Add Event">
                                                </div>
                                            </div>
                                        </div>
                                       
                                    </div>
                                    <input id = "username" type="hidden" name="username" value="  <%= name.username %>">
