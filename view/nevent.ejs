                                <form method="POST"  id = "eventForm" action="" class="form-horizontal">
                                    <div class="card-header card-header-text" data-background-color="purple">
                                        <h4 class="card-title">Event Form</h4>
                                    </div>
                                    <div class="card-content">
                                        <div class="row">
                                            <div id="alert-info"></div>
                                            <label class="col-sm-4 label-on-left">Full Name</label>
                                            <div class="col-sm-8">
                                                <div class="form-group label-floating is-empty">
                                                    <label class="control-label"></label>
                                                    <input type="text" name="full_name" class="form-control validate[required]" ng-model = "full_name" value="">
